{
  "name": "miller-columns-element",
  "version": "1.3.1",
  "description": "Miller columns (cascading lists) for hierarchical topic selection on GOV.UK taxonomy",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "license": "MIT",
  "repository": "alphagov/miller-columns-element",
  "files": [
    "dist"
  ],
  "watch": {
    "build": [
      "index.js",
      "main.scss",
      "miller-columns.scss",
      "miller-columns-selected.scss"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "sass-lint main.scss -v -q && eslint index.js test/ && flow check",
    "prebuild": "npm run clean && mkdir dist",
    "build-css": "node-sass main.scss dist/main.css && node-sass miller-columns.scss dist/miller-columns.css",
    "build-umd": "BABEL_ENV=umd babel index.js -o dist/index.umd.js",
    "build-esm": "BABEL_ENV=esm babel index.js -o dist/index.esm.js",
    "build": "npm run build-css && npm run build-umd && npm run build-esm",
    "pretest": "npm run build && npm run lint",
    "test": "karma start test/karma.config.js",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "1.0.0",
    "flow-bin": "^0.75.0",
    "govuk-frontend": "^3.6.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^5.0.5",
    "node-sass": "^4.13.1",
    "npm-watch": "^0.6.0",
    "sass-lint": "^1.13.1"
  }
}
